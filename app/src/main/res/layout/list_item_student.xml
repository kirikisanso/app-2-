<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/time_table_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_list_item_student"
        android:background="@color/colorIndigo50"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studentNameTxt"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_left_txt_add_module"
            android:layout_marginTop="@dimen/margin_top_module_txt_student"
            android:text="sample module "
            android:textColor="@color/colorAddModuleListModuletxt"
            android:textSize="@dimen/txt_module_add_module_list" />

        <TextView
            android:id="@+id/studemtIdTxt"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_bottom_id_txt_student"
            android:layout_marginLeft="@dimen/margin_left_txt_add_module"
            android:text="sample module id"
            android:textColor="@color/colorAddModuleListIdtxt"
            android:textSize="@dimen/txt_id_add_module_list" />

        <View
            android:backgroundTint="@color/colorAddModuleListLine"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAddModuleListLine" />

    </RelativeLayout>
</layout>